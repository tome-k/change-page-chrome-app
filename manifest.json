{
  "manifest_version": 2,
  "name": "Fast Tab Switcher",
  "description": "Quickly switch to other open tabs with just your keyboard",
  "version": "0.3.0",
  "icons": {
    "16": "build/img/icon16.png",
    "48": "build/img/icon48.png",
    "128": "build/img/icon128.png"
  },
  "permissions": [
    "tabs", "storage"
  ],
  "commands": {
    "show-tab-switcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+Comma"
      },
      "description": "Show the Fast Tab Switcher"
    }
  },
  "background": {
    "scripts": ["build/js/background-bundle.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
